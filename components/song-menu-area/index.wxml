<!--components/song-menu/index.wxml-->
<view class="area">
    <area-header title="{{title}}"></area-header>
    <!-- <scroll-view scroll-x="{{true}}" class="menu-list" style="width: {{screenWidth}}px;"> -->
    <scroll-view scroll-x class="menu-list" >
        <block wx:for="{{songMenu}}" wx:key="id">
            <song-menu-item item="{{item}}" 
                            bindtap="handleMenuItemClick"
                            data-item="{{item}}"></song-menu-item>
        </block>
    </scroll-view>
</view>
   

