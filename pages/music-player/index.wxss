/* pages/music-player/index.wxss */
page{
    color: #fff;
}
.bg-image, .bg-cover{
    /* 只有设置了position才能设置z-index */
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}
.bg-cover{
    background-color: rgba(0, 0, 0, .5);
    /* 毛玻璃模糊背景用的 */
    backdrop-filter: blur(30px);
}

/* 自定义导航 */
.tab{
    display: flex;
    font-size: 30rpx;
    color: #999;
    justify-content: center;
    align-items: center;
}
.tab .divider{
    margin: 0 10rpx;
}

/* 页面滑动 */
.tab .active{
    color: #fff;
}

/* 内容样式 */
.content {
    color: #fff;
  }
  
  .content .music {
    /* 弹性布局 */
    display: flex;
    /* 竖直向下排布 */
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 30rpx 60rpx;
  }
  
  /* 封面 */
  .album {
    display: flex;
    /* 居中 */
    align-items: center;
    /* 占据5 */
    flex: 5;
  }
  
  .album .image {
    width: 100%;
    border-radius: 12rpx;
  }
  
  /* 歌曲信息 */
  .music .info {
    margin: 20rpx 0;
  }
  
  .music .info .title {
    font-size: 48rpx;
    font-weight: 700;
  }
  
  .music .info .singer, .music .info .alias {
    font-size: 26rpx;
    color: #ccc;
    margin: 16rpx 0;
  }
  
  /* 歌词 */
  .music .lyric {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    font-size: 30rpx;
    color: #0f0;
  }
  
  /* 进度 */
  .progress {
    margin: 10rpx 10rpx;
  }
  
  .slider {
    margin: 0 0 18rpx 20rpx;
  }
  
  .time {
    display: flex;
     /* 向两边靠 */
    justify-content: space-between;
    color: #ccc;
    font-size: 22rpx;
  }
  
  .time .current {
    margin-left: 10rpx;
  }
  
  
  /* 操作css */
  .operation {
    display: flex;
    /* 让盒子里面的元素都上下左右居中对齐 */
    justify-content: space-between;
    align-items: center;
    
    margin: 20rpx 0 30rpx;
  }
  
  .operation .btn {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    padding: 0;
  }
  
  .operation .btn-mode {
    width: 80rpx;
    height: 80rpx;
  }
  
  .operation .btn-pause {
    width: 130rpx;
    height: 130rpx;
  }

  /* 歌词分页的样式 */
.lyric-list {
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.lyric-list .item {
  height: 35px;
  /* 歌词与歌词之间的距离 */
  line-height: 35px;
  font-size: 28rpx;
  text-align: center;
  color: #989898;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.lyric-list .item.active {
  color: #26ce8a;
  font-size: 36rpx;
}